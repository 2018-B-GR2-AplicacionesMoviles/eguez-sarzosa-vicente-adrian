<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MLKitActivity">

    <Button
        android:id="@+id/button_tomar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Tomar foto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_codigo_barras"
        android:layout_width="365dp"
        android:layout_height="273dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_tomar_foto"
        app:layout_constraintEnd_toEndOf="@+id/button_tomar_foto"
        app:layout_constraintStart_toStartOf="@+id/button_tomar_foto"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

    <ListView
        android:id="@+id/list_view_codigo_barras"
        android:layout_width="549dp"
        android:layout_height="379dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_tomar_foto"
        app:layout_constraintStart_toStartOf="@+id/button_tomar_foto"
        app:layout_constraintTop_toBottomOf="@+id/button_tomar_foto" />
</android.support.constraint.ConstraintLayout>